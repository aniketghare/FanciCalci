<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="numberStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/buttonstyle</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="textBoxstyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:opacity">transparent</item>
        <item name="android:textSize">50dp</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">30dp</item>
        <item name="android:background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="operatorStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/orange</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="equalStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="acStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>